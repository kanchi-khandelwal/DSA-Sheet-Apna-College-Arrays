class Solution
{
   public:
    int findSum(int A[], int N)
    {
    	int sum=0;
    	int mini=A[0];
    	int maxi=A[0];
    	for(int i=0; i<N; i++)
    	{
    	    if(A[i]<mini)
    	    {
    	        mini=A[i];
    	    }
    	    else if(A[i]>maxi)
    	    {
    	        maxi=A[i];
    	    }
    	}
    	sum=mini+maxi;
    	return sum;
    }

};
